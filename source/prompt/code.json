{
  "需求说明": {
    "任务类型": "生成Python代码",
    "功能要求": {
      "核心功能": [
        "遍历指定路径下的目录树",
        "根据提供的文件名数组筛选文件",
        "提取匹配文件的内容",
        "以JSON格式输出结果"
      ],
      "输入参数": [
        {
          "参数名": "目标目录",
          "类型": "字符串",
          "说明": "需要扫描的根目录路径"
        },
        {
          "参数名": "目标文件名列表",
          "类型": "数组",
          "说明": "需要匹配的文件名列表（区分大小写）"
        }
      ],
      "输出规范": {
        "格式": "JSON",
        "结构": {
          "文件名": {
            "路径": "相对于根目录的路径",
            "内容": "文件文本内容",
            "大小": "文件大小（字节）",
            "最后修改时间": "ISO8601时间戳"
          }
        }
      },
      "其他要求": [
        "文本文件使用UTF-8编码",
        "跳过二进制文件",
        "包含权限/编码问题的错误处理",
        "在输出路径中保留原始目录结构"
      ]
    },
    "示例": {
      "输入示例": {
        "目标目录": "./项目文件",
        "目标文件名列表": ["说明.md", "配置.json", "依赖.txt"]
      },
      "输出示例": {
        "说明.md": {
          "路径": "文档/说明.md",
          "内容": "# 示例项目\n\n项目描述...",
          "大小": 1024,
          "最后修改时间": "2023-12-01T14:30:00+08:00"
        },
        "配置.json": {
          "路径": "设置/配置.json",
          "内容": "{\n  \"version\": \"1.0.0\"\n}",
          "大小": 512,
          "最后修改时间": "2023-11-30T09:15:22+08:00"
        }
      }
    }
  }
}